void showdata()
{


	char arrshow[]={'G','-','C','A','S','H',' ',' ',' '};
	cout<<"\n\n\n\n\n\n\t\t\t";
	for(int i=0;i<7;i++)
	{
	    cout<<"\t";
		cout<<arrshow[i];
		Sleep(500);

	}
	system("CLS");

}

void simCard()
{
    char simC;

    cout<<n15;
    cout<<"Choose Telco\n";
    cout<<n15;
    cout<<"T. TNT\n";
    cout<<n15;
    cout<<"D. DITO\n";
    cout<<n15;
    cout<<"S. SMART\n";
    cout<<n15;
    cout<<"G. GLOBE\n";
    cout<<n15;
    cout<<"M. TM\n";
    cout<<n15;
    cout<<"O. Gomo\n";
    cout<<n15;
    cin>>simC;
    cout<<endl<<endl;

    switch(simC)
    {
    case 'T':
        cout<<n15;
        cout<<"TNT\n";
        break;

    case 'D':
        cout<<n15;
        cout<<"DITO\n";
        break;

    case 'S':
        cout<<n15;
        cout<<"SMART\n";
        break;

    case 'G':
        cout<<n15;
        cout<<"GLOBE\n";
        break;

    case 'M':
        cout<<n15;
        cout<<"TM\n";
        break;

    case 'O':
        cout<<n15;
        cout<<"O\n";
        break;
    default:
        cout<<n15;
        cout<<"Error, Please try again.";
    }



}


void cashIn()
{
    system("CLS");
            double cash_in_amount;
            cout<<n15;
            cout<<"____________________________________________________"<<endl;
            cout<<n15;
            cout<<"____________________________________________________\n\n";
            cout<<n15;
            cout<<"\t\tCash in"<<endl;
            cout<<n15;
            cout<<"____________________________________________________"<<endl;
            cout<<n15;
            cout<<"____________________________________________________\n\n";
            cout<<n15;
            cout<<"Please enter the amount to cash in: P";
            cin>>cash_in_amount;
            available_balance += cash_in_amount;
            cout<<n15;
            cout<<"Verication: Press 1 to confirm it\n";
            cout<<n15<<"1.Confirm\n";
            cout<<n15<<"2.Exit\n";
            cout<<n15<<"Press: ";
            cin>>verification;
            if(verification != 1)
                {
            cout<<n15;
            cout<<"Transaction Denied\n";

            }
            cout<<n15;
            cout<<"Processing...\n";
            Sleep(1000);
            cout<<n15;
            cout<<"Cash in Successful."<<endl<<"\t\t\t\t\tCurrent balance: P"<<available_balance<<endl<<endl;
}

void send()
{
            system("CLS");
        string gcash_number;
        double send_amount;
        cout<<n15;
        cout<<"____________________________________________________"<<endl;
        cout<<n15;
        cout<<"____________________________________________________\n\n";
        cout<<n15;
        cout<<"\tSend Money to another Gcash user"<<endl;
        cout<<n15;
        cout<<"____________________________________________________"<<endl;
        cout<<n15;
        cout<<"____________________________________________________\n\n";
        cout<<n15;
        cout<<"Please enter the Gcash Number of the recipient: ";
        cin>>gcash_number;
        cout<<n15;
        cout<<"Enter the amount to send: P";
        cin>>send_amount;
        cout<<n15;
        cout<<"Verication: Press 1 to confirm it\n";
        cout<<n15<<"1.Confirm\n";
        cout<<n15<<"2.Exit\n";
        cout<<n15<<"Press: ";

        cin>>verification;
        if(verification != 1)
                {
        cout<<n15;
        cout<<"Transaction Denied\n";

            }
        if(send_amount > available_balance){
        cout<<n15;
        cout<<"Insufficient balance. Please try again.\n";
        }else{
        cout<<n15;
        cout<<"Processing...\n";
        Sleep(1000);
        available_balance -= send_amount;
        cout<<n15;
        cout<<"Payment successful."<<endl<<n15<<"Current Balance: P"<<available_balance<<endl<<endl;


}}


