//Registration Variables
class Register
{

public:
    string FirstN,MiddleN,LastN,Email,country,birthDate,sex;

    long int password,Mnumber;


    bool Email_check(string email)
{

    const regex pattern("(\\w+)(\\.|_)?(\\w*)@(\\w+)(\\.(\\w+))+");
    return regex_match(email, pattern);
}

};

